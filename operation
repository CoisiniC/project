from django.db import models

# Create your models here.
from datetime import timezone

from django.db import models

# Create your models here.
class Order(models.Model):
    OrderCode = models.CharField(max_length=50, verbose_name=u"订单号")
    Addres = models.TextField(verbose_name=u"收货地址")
    Post = models.CharField(max_length=32, verbose_name=u"邮政编码")
    Receiver = models.CharField(max_length=200, verbose_name=u"收货人信息")
    Mobile = models.CharField(max_length=32, verbose_name=u"收货人电话号码")
    UserMessage = models.TextField(verbose_name=u"用户备注")
    CreateDate = models.DateTimeField(verbose_name=u"创建日期", default=timezone.now
    PayDate = models.DateTimeField(verbose_name=u"支付日期", default=timezone.now)
    DeliveryDate = models.DateTimeField(verbose_name=u"发货日期", default=timezone.now)
    ConfirmDate = models.DateTimeField(verbose_name=u"收货日期", default=timezone.now)
    CreateDate = models.DateTimeField(verbose_name=u"创建日期")
    PayDate = models.DateTimeField(verbose_name=u"支付日期")
    DeliveryDate = models.DateTimeField(verbose_name=u"发货日期")
    ConfirmDate = models.DateTimeField(verbose_name=u"收货日期")
    status = models.CharField(choices=(("waitPay", u"等待支付"),
                                       ("waitDelivery", u"等待发货"),
                                       ("waitConfirm", u"等待收货"),
                                       ("finish", u"交易完成"),
                                       ("delete", u"订单删除"),
                                       ), default="waitPay",
                              max_length=100, verbose_name=u"订单状态")
